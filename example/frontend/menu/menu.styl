@require '../pics'

.menu

  .title
    @extend .plus
    padding 0 6px 0 16px

    background-position left 1px
    background-repeat no-repeat
    background-size 14px

    font-weight bold
    cursor pointer

  .list
    display none
    margin 0

    a
      color #00ff3d

  &.open
    .list
      display block

    .title
      @extend .minus

